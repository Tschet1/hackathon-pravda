{
  "name": "Pravda news",
  "version": "1.0",
  "description": "Fight the fake news!",
  "permissions": ["tabs", "declarativeContent","storage", "activeTab"],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
	"browser_action": {
	   "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      },
      "default_title": "Pravda news checker",
      "default_popup": "popup.html"
    },
	"icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
  "manifest_version": 2,
  "web_accessible_resources" : ["readWeb.js"],
  "content_scripts": [
   {
     "matches": ["*://*/*"],
     "js": [
         "bower_components/js-sha256/build/sha256.min.js",
         "web3.js/dist/web3.min.js",
         "content.js"
     ]
   }
 ]
}

